@using System.Security.Claims
@using EstateAdministrationUI.Common
@using IdentityModel
@if (User.Identity.IsAuthenticated)
{
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="index3.html" class="brand-link">
            <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">Estate Admin</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    @{
                            void getUsername(ClaimsIdentity identity)
                            {
                                String givenName = identity.GetClaimValue(JwtClaimTypes.GivenName);
                                String familyName = identity.GetClaimValue(JwtClaimTypes.FamilyName);
                                <a href="#" class="d-block">
                                    @givenName @familyName
                                </a>
                            }
                            getUsername((ClaimsIdentity)User.Identity);
                    }
                </div>
            </div>

            <!-- SidebarSearch Form -->
            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                    <li class="nav-item menu-open">
                        <li class="nav-item">
                            <a class="nav-link" id="dashboardLink" asp-action="Index" asp-area="Estate" asp-controller="Home">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <hr class="sidebar-divider my-0">
                        <li class="nav-item">
                            <a class="nav-link" id="estateDetailsLink" asp-action="GetEstate" asp-area="Estate" asp-controller="Estate">
                                <i class="fas fa-fw fa-hotel"></i>
                                <span>My Estate</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="merchantsLink" asp-action="GetMerchantList" asp-area="Estate" asp-controller="Merchant">
                                <i class="fas fa-fw fa-store"></i>
                                <span>My Merchants</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" id="operatorsLink" asp-action="GetOperatorList" asp-area="Estate" asp-controller="Operator">
                                <i class="fas fa-fw fa-university"></i>
                                <span>My Operators</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" id="contractsLink" asp-action="GetContractList" asp-area="Estate" asp-controller="Contract">
                                <i class="fas fa-fw fa-file-signature"></i>
                                <span>My Contracts</span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-fw fa-book"></i>
                                <span>Reports</span>
                                <i class="right fas fa-angle-left"></i>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="collapse-item" asp-action="GetTransactionAnalysis" asp-area="Estate" asp-controller="Reporting">
                                        <i class="fas fa-fw fa-chart-line nav-icon"></i>
                                        <span>Transaction Analysis</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="collapse-item" href="cards.html">
                                        <i class="fas fa-fw fa-chart-line nav-icon"></i>
                                        <span>Merchant Analysis</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="collapse-item" href="cards.html">
                                        <i class="fas fa-fw fa-chart-line nav-icon"></i>
                                        <span>Operator Analysis</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </li>

                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
}